# ============================================
# SECURITY CONFIGURATION (REQUIRED)
# ============================================

# CRITICAL: Generate a strong random secret (minimum 32 characters)
# You can generate one using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# DO NOT use weak secrets like 'secret', '123456', or any default values
JWT_SECRET=<generate-strong-random-secret-min-32-chars>

# ============================================
# DATABASE CONFIGURATION
# ============================================
MONGODB_URL=mongodb+srv://<username>:<password>@<cluster>/<db>?retryWrites=true&w=majority

# ============================================
# ENVIRONMENT
# ============================================
NODE_ENV=production

# ============================================
# EMAIL CONFIGURATION (Optional)
# ============================================
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@example.com
EMAIL_PASSWORD=your_email_password
# Or use App Password (recommended with Gmail 2FA)
# EMAIL_APP_PASSWORD=your_email_app_password
ADMIN_EMAIL=admin@example.com

# ============================================
# FRONTEND URLs (for CORS)
# ============================================
FRONTEND_URL=https://your-frontend.vercel.app
ADMIN_URL=https://your-admin.vercel.app

# ============================================
# SERVER PORT (for local development)
# ============================================
# PORT is usually not needed on Vercel/Render
PORT=4000

